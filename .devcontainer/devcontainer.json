{
    "name": "React Tic Tac Toe",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "forwardPorts": [8000],
    "postCreateCommand": "cd /workspaces/react-tic-tac-toe && nohup python3 -m http.server 8000 &",
    "portsAttributes": {
        "8000": {
            "label": "Web App",
            "onAutoForward": "openBrowser",
            "visibility": "public",
            "protocol": "http",
            "elevateIfNeeded": true
        }
    },
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    }
}
