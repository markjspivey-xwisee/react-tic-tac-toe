{
    "name": "React Tic Tac Toe",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "forwardPorts": [8000],
    "postCreateCommand": "cd /workspaces/react-tic-tac-toe && python -m http.server 8000 &",
    "postStartCommand": "cd /workspaces/react-tic-tac-toe && python -m http.server 8000 &",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "files.autoSave": "afterDelay"
            }
        },
        "codespaces": {
            "openFiles": [
                "README.md",
                "index.html"
            ]
        }
    },
    "portsAttributes": {
        "8000": {
            "label": "Web App",
            "onAutoForward": "openBrowser",
            "visibility": "public",
            "protocol": "http"
        }
    }
}
